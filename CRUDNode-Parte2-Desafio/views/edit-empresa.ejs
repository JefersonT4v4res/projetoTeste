<h2>Editar Registro<h2>
  <% empresa.forEach(function(details) { %>
    <form action="/edit-empresa/<%= details._id %>" method="POST">
  
      <div class="container-fluid">
        <div class="jumbotron jumbotron-fluid">
          <div class="container-fluid">
              <div class="row">
                  <div class="col-sm-5">
                    <label>Nome:</label>
                    <input type="text" id="nome" value="<%= details.Inpname %>" name="Inpname">
                  </div>
                  <div class="col-sm-7">
                     <label>Nome fantasia:</label>
                     <input type="text" id="fantasia" value="<%= details.InpFantasia %>" name="InpFantasia">
                  </div>
              </div>
              
              <br>
              <div id="div2" class="row">
                  <div class="col-sm-3">
                    <label>CNPJ:</label>
                    <input type="text" id="cnpj" value="<%= details.inpCnpj %>" name="inpCnpj">
                  </div>
                  <div id="div3" class="col-sm-4">
                    <label>Contato:</label>
                    <input type="text" id="telefone" value="<%= details.InpTel %>" name="InpTel">
                  </div>
                  <div class="col-md-5">
                    <label>Email:</label>
                    <input type="text" id="email" value="<%= details.InpEmail %>" name="InpEmail">
                  </div>
              </div>
              <br>
      
              <div class="row">
                <div class="col-sm-10">
                  <label>Endere√ßo:</label>
                  <input type="text" id="endereco" value="<%= details.InpEnd %>" name="InpEnd">
                </div>
            </div>
              
              <div id="div4" class="row">
                  <div class="col-sm-4">
                    <br>
                    <label>Cidade:</label>
                    <input type="text" id="cidade" value="<%= details.InpCity %>" name="InpCity">
                  </div>
                  <div class="col-md-6">
                    <br>
                    <label>Estado:</label>
                    <select class="select h-50 w-50" id="estado" value="<%= details.InpEs %>" name="InpEs">
