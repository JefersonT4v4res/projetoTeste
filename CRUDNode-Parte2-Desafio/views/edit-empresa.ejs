                      <option>MG</option>
                      <option>PA</option>
                      <option>PB</option>
                      <option>PR</option>
                      <option>PE</option>
                      <option>PI</option>
                      <option>RJ</option>
                      <option>RN</option>
                      <option>RS</option>
                      <option>RO</option>
                      <option>RR</option>
                      <option>SC</option>
                      <option>SP</option>
                      <option>SE</option>
                      <option>TO</option>
                    </select>
                  </div>
              </div>  
              <br />
            </div>     
          </div>
        </div> 
      </div>
      <button id="btnVoltar"><a href="/show-empresa">Voltar</a></button> 
      <button id="btnEditar" type="submit">Editar</button>
    </form> 
    <% }) %>
    
    
